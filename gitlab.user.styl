    colors: 0, $darker, $dark;
    .card-header, .card-footer {
      font-weight: 600 !important;
      colors: 0, $darker, $darker;
    }
    .card-body {
      padding: 8px;
      pre {
        font-family: var(--code-font);
        radius: $radius;
        colors: $light, $darker, $dark;
      }
    }
    // ? Project -> Releases.
    &.linked-card {
      .dropdown > .btn-link { colors: $light, $t, 0; }
      &::after {
        border: none;
        border-left: 1px solid $darker;
      }
    }
  }

  // * Emoji picker.
  .emoji-menu {
    radius: $radius;
    colors: 0, $darker, $dark;
  }
  // * Emoji autocomplete.
  .atwho-view {
    colors: $light, $darker, $dark;
    box-shadow: $box;
    .atwho-view-ul {
      // Matching text.
      li strong { colors: $lighter, 0, 0; }
      // Selected.
      li:hover, li.cur { colors: $lighter, 0, $darker; }
    }
  }


  // * Issues :: Boards.
  .issue-boards-content {
    // Fullscreen.
    &.is-focused {
      colors: 0, 0, $dark;
    }
    // Reset search bar.
    .row-content-block {
      margin: 0 16px;
      padding: 0 !important;
      border: none !important;
      colors: 0, 0, $t;
      // Fix search box.
      .filtered-search-box {
        max-height: 35px;
        radius: 3px;
      }
    }
    // Board colors.
    .board-inner {
      colors: 0, $darker, $dark;
      // Board header.
      .board-title { colors: $light, $darker, 0; }
      // Empty, default boards.
      [class$="-state"] { colors: $light, 0, $dark; }
      // Showing all issues.
      .board-list-count,
      .board-title-sub-text {
        colors: $lighter, 0, 0;
      }
    }
    .issue-count-badge {
      colors: 0, $darker, 0;
    }
