      colors: 0, 0, $darker;
      box-shadow: 0 2px 8px $shadow;
    }
    // Hover popup.
    .monaco-editor-hover {
      colors: 0, $shadow, $darker;
    }
    // Selection.
    .cslr.selected-text {
      background-color: $darker;
    }
    // Matching.
    .selectionHighlight {
      background-color: $darker !important;
    }
    // Suggestion.
