            &_indent-guide {
                background: none;
                box-shadow: inset -1px 0 bd;
            }
            &_print-margin { c: 0 0 bd }
            /// Search/replace popout.
            &_search {
                c: 0 bd hl;
                box-shadow: bsh;
                &_form, &_field { c: fg bd bg }
                [action] { c: fg bd hl }
            }
            /// Options.
            &_search_options {
                margin: 4px 0 0 -2px;
                text-align: left;
                .ace_button {
                    padding: 4px;
                    rad: 3px;
                    c: cm bd bg;
                    &:hover, &.checked { c: fg 0 bd }
                }
            }
            /// Scroller shadow.
            &_scroller&_scroll-left { box-shadow: inset 17px 0 16px -16px sh }
