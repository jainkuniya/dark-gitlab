  .landing .footer a:hover,
  .landing .footer .source-link a {
    color: var(--accent) !important;
    text-decoration: underline !important;
  }
  .landing .footer .source-link {
    border-top: 1px solid var(--shadow);
    background-color: var(--darker);
  }


  /* Docs :: Search results. */
  .algolia-autocomplete [class*="dataset"],
  .algolia-autocomplete [class*="docsearch-s"] {
    color: var(--light) !important;
    border-color: var(--darker) !important;
    background-color: var(--dark) !important;
  }
  /* Remove shadow. */
  .algolia-autocomplete .ds-dropdown-menu {
    box-shadow: 0 4px 16px -4px var(--shadow);
  }
  /* Header. */
  .algolia-autocomplete [class*="header"] {
    color: var(--lighter) !important;
    border-bottom-color: var(--darker) !important;
  }
  /* Separator. */
  .algolia-autocomplete .algolia-docsearch-suggestion--content::before {
    background: var(--darker) !important;
  }
  /* Matching result. */
  .algolia-autocomplete [class*="highlight"] {
    box-shadow: inset 0 -2px 0 0 var(--blue) !important;
  }


  /* Docs :: Page. */
  [itemtype*="http://schema.org/WebPage"] .header {
    border-color: var(--shadow) !important;
    background-color: var(--darker) !important;
  }
  /* Search button. */
  .header .docsearch {
    radius: $radius !important;
    border-color: var(--darker) !important;
    background-color: var(--dark) !important;
  }

  // * Main content.
  .main {
    background-color: transparent !important;
    box-shadow: none !important;
    // TOC.
    .doc-nav > ul {
      margin-right: 10px;
      colors: 0, 0, $dark;
    }
    // Remove sidebar.
    *::-webkit-scrollbar { display: none !important; }
    // Alerts.
    .alert-info, blockquote { colors: 0, $blue, $dark; }
    .alert-warning { colors: 0, $red, $dark; }
    .alert.alert-success { colors: 0, $violet, $violet; }
    // Table related.
    table td, table th { colors: 0, $darker, 0; }
    table thead { colors: 0, 0, $darker; }
    // Border colors.
    h2, h3, h4, h5, h6, .edit-on, .comments { colors: 0, $darker, 0; }
    // Text colors.
    a:hover, a:focus { text-decoration: underline; }
    .article-metadata { colors: $light, 0, 0; }
    .highlight.plaintext code { colors: $light, 0, 0; }
